{
    "name": "comodojo/dispatcher-assets-loader",
    "description": "Assets loader for dispatcher and comodojo frameworks",
    "type": "comodojo-bundle",
    "license": "MIT",
    "keywords": [],
    "homepage": "https://comodojo.org",
    "support": {
        "issues": "https://github.com/comodojo/dispatcher-assets-loader/issues"
    },
    "autoload": {
        "psr-4": {
            "Comodojo\\DispatcherAssetsLoader\\": "src/"
        }
    },
    "require": {
        "matthiasmullie/minify": "1.3.*"
    },
    "extra": {
        "comodojo-bundle": {
            "routes": [
                {
                    "route": "assets",
                    "query": [
                        {
                            "vendor*": ".+"
                        },
                        {
                            "package*": ".+",
                            "type": "\\.(js|css)"
                        },
                        {
                            "filename": "^(.+?)\\.(\\w+?)$"
                        }
                    ],
                    "type": "ROUTE",
                    "class": "\\Comodojo\\Dispatcher\\Service\\GetAssets",
                    "parameters": {
                        "cache": "SERVER",
                        "ttl": 86400
                    }
                }
            ]
        }
    }
}
